<div class="flex flex-col gap-4 px-4">
  <div class="overflow-hidden px-0">
      <img src="{{ item.featured_image |  img_url :'master'  }}" loading="lazy" alt="{{ item.title | escape }}">
    
  </div>
  <div class="text-xs">
    <p class="font-bold">{{ item.title |  escape }}</p>
    <p>{{ item.vendor }} </p>
    <div class="flex justify-between ">
      <p class="text-gray-700">{{ item.price | money }}</p>
      {% if item.has_descount %}
        <p class="line-through text-gray-500"> {{ item.old_price | money }} </p>
        
      {% endif %}
    </div>
  </div>
  <div>
    <button class="bg-black text-lg text-white "> Add to cart </button>
  </div>
    
</div>